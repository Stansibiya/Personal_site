@model TshepoSibiya.Models.LoginViewModel

<div class="row">

    <div class="col-md-10">
        
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true)
                <div class="form-group">
                   <div style="margin-bottom:50px;text-align:center">
                       <h2>Login</h2>
                       <hr/>
                   </div>
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username", style = "background-color:cyan;" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", style = "background-color:cyan;" })
                        @Html.ValidationMessageFor(m => m.Password)
                        <div style="margin-top:20px;">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                        <p> <input type="submit" value="Log in" class="btn btn-default" /></p>
                        <p>
                            <a href="~/register.html">Register</a>
                        </p>
                            </div>
                    </div>
                </div>
               
                
            }
        </section>
    </div>
</div>
